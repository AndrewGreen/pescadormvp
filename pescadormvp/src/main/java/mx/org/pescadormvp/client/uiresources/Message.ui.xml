<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>

		.outerPanel {
			border: 1px solid #aaa;
			background-color: #ddd;
			border-radius: 6px;
			display: inline-block;
			padding: 8px;
			-moz-box-shadow: inset 0 0 5px 5px #e8e8e8;
			-webkit-box-shadow: inset 0 0 5px 5px #e8e8e8;
			box-shadow: inset 0 0 5px 5px #e8e8e8;
		}
		
		.textSpan {
			color: #666;
			font-size: 14px;
		}
	
	</ui:style>
	
	<g:HTMLPanel ui:field="outerPanel" styleName="{style.outerPanel}">
		<span ui:field="textSpan" class="{style.textSpan}" />
	</g:HTMLPanel>
</ui:UiBinder>
