<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style type="mx.org.pescadormvp.client.uiresources.InternalImageLink.InternalImageLinkStyle">

		.image {
			border: none;
		}
	
		.imageDropShadow {
			-moz-box-shadow: 0 0 5px 3px #888;
			-webkit-box-shadow: 0 0 3px 5px#888;
			box-shadow: 0 0 5px 3px #888;
		}
	
		.link {
			border: none;
		}
	
	</ui:style>
	
	<g:HTMLPanel>
		<a ui:field="link" class="{style.link}">
			<g:Image ui:field="image" styleName="{style.image}"/>
		</a>
	</g:HTMLPanel>
</ui:UiBinder>
