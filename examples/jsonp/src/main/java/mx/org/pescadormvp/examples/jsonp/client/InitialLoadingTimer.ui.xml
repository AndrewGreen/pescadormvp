<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
	
		@sprite .timer {
			gwt-image: "initialLoadingTimerImg";
			position: absolute;
			top: 50%;
	  		left: 50%;
	  		margin-top: -64px;
	  		margin-left: -40px;
	  		opacity: 0;
		}
		
		.container {
			width: 100%;
			height: 100%;
			background-color: #fff;
		}
		    
	</ui:style>

	<ui:image field="initialLoadingTimerImg" src="initialLoadingTimer.png"/>
	
	<g:HTML styleName="{style.container}">
		<div ui:field="timer" class="{style.timer}" />		
	</g:HTML>
</ui:UiBinder>